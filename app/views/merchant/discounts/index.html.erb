<h1>My Discounts</h1>
<br>
<p><%= link_to "New Bulk Discount", "/merchant/discounts/new" %></p>
<% @merchant.discounts.each do |discount| %>
  <section id='discount-<%= discount.id %>'>
    <h2><%= link_to discount.name, "/merchant/discounts/#{discount.id}" %></h2>
    <p><%= discount.min_item_quantity %></p>
    <p><%= discount.percent_off %></p>
  </section>
<% end %>
