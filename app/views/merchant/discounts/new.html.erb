<h1>Create A New Bulk Discount</h1>
<%= form_tag "/merchant/discounts", method: :post do |f| %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @discount.name %>

  <%= label_tag :min_item_quantity %>
  <%= text_field_tag :min_item_quantity, @discount.min_item_quantity %>

  <%= label_tag :percent_off %>
  <%= text_field_tag :percent_off, @discount.percent_off %>

  <%= submit_tag "Create Bulk Discount" %>
<% end %>
